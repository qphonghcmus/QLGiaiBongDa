    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header bg-light text-dark">

            <div class="header-menu ">

                <div class="col-sm-3">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                    <div class="header-left">
                    </div>
                </div>

                <div class="col-sm-6 badge ">
                    <h3 class="">GIẢI BÓNG ĐÁ VÔ ĐỊCH QUỐC GIA</h3>
                </div>
            </div>

        </header><!-- /header -->
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>
                            <% if( typeof(activeAdmin) != 'undefined' && activeAdmin === true){ %> Trang chủ <% } %>
                            <% if( typeof(activeDoibong) != 'undefined' && activeDoibong === true){ %> Đội bóng <% } %>
                            <% if( typeof(activeCauthu) != 'undefined' && activeCauthu === true){ %> Cầu thủ <% } %>
                            <% if( typeof(activeLichthidau) != 'undefined' && activeLichthidau === true){ %> Lịch thi
                            đấu <% } %>
                            <% if( typeof(activeKetqua) != 'undefined' && activeKetqua === true){ %> Kết quả <% } %>
                            <% if( typeof(activeBaocao) != 'undefined' && activeBaocao === true){ %> Báo cáo <% } %>
                            <% if( typeof(activeDieule) != 'undefined' && activeDieule === true){ %> Điều lệ giải
                            <% } %>
                        </h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li class="active"><%= chuyenmuc%></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <%- include(filename) %>
        </div> <!-- .content -->
    </div><!-- /#right-panel -->

    <!-- Right Panel -->

    <%- include('./foot') -%>

