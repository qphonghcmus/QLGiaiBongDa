<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Bảng xếp hạng</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>TT</th>
                                <th>CLB</th>
                                <th>Số trận</th>
                                <th>Thắng</th>
                                <th>Hòa</th>
                                <th>Thua</th>
                                <th>Bàn thắng</th>
                                <th>Bàn thua</th>
                                <th>Hệ số</th>
                                <th>Điểm</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < clubs.length; i++) { %>
                                <tr>
                                    <td><%= i+1%></td>
                                    <td><%= clubs[i].name %></td>
                                    <td><%= clubs[i].wins + clubs[i].draws + clubs[i].losts  %></td>
                                    <td><%= clubs[i].wins %></td>
                                    <td><%= clubs[i].draws %></td>
                                    <td><%= clubs[i].losts %></td>
                                    <td><%= clubs[i].goalsFor %></td>
                                    <td><%= clubs[i].goalsAgainst %></td>
                                    <td><%= clubs[i].goalsDiff %></td>
                                    <td><%= clubs[i].point %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>