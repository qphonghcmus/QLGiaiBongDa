<div class="row">
    <div class="col-sm-12">
        <div class="alert  alert-success alert-dismissible fade show" role="alert">
            <span class="badge badge-pill badge-success">Đội bóng</span>
            <% if (edit=="true") { %>
                <a <i href="/club/info/<%=thongtindoibong._id%>&false" class="fa fa-ban close "></i> Tắt chỉnh sửa </a>
            <% } else { %>
                <a <i href="/club/info/<%=thongtindoibong._id%>&true" class="fa fa-pen close" style="margin-right: 30px"> Chỉnh sửa </i></a>
            <%}%>
            
        </div>
    </div>
</div>


<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-9">
            <div class="card">
                <div class="card-header">
                    <strong>Thông tin</strong>
                </div>
                <div class="card-body card-block">
                    <form action="/club/info/update/<%=thongtindoibong._id%>" method="post" id="update" class="form-horizontal">

                        <div class="row form-group">

                            <div class="col col-md-3 "><label for="tendoibong" class=" form-control-label "> Tên đội bóng</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="tendoibong" name="tendoibong" placeholder="Tên đội bóng"
                                    class="form-control" value="<%=thongtindoibong.tenDoiBong%>"
                                    <% if (edit=="false") { %>
                                        disabled
                                    <% } %> >
                            </div>



                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3 "><label for="svd" class=" form-control-label ">Sân vận
                                    động</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="svd" name="svd" placeholder="Sân vận động" class="form-control"
                                value="<%=thongtindoibong.svd%>" <% if (edit=="false") { %>
                                    disabled
                                <% } %>>

                            </div>

                        </div>

                        <div class="row form-group">

                            <div class="col col-md-3 "><label for="hlv" class=" form-control-label ">Huấn luyện
                                    viên</label>
                            </div>
                            <div class="col-12 col-md-9">
                                <input type="text" id="hlv" name="hlv" placeholder="Huấn luyện viên"
                                    class="form-control" value="<%=thongtindoibong.hlv%>" <% if (edit=="false") { %>
                                        disabled
                                    <% } %> >

                            </div>
                        </div>
                        <button form="update" type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-check"></i> Cập nhật
                        </button>
                        <form><input type="button" class="btn btn-danger btn-sm" value="Refresh" onclick="history.go(0)" value="Reset"></form>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="card">
                <div class="card-header">
                    <strong>Logo</strong>
                </div>
                <div class="card-body card-block">
                    <img class="logo-team"
                        src="../<%=thongtindoibong.logo%>"
                        alt="image">

                </div>
            </div>
        </div>
    </div>
</div><!-- .animated -->
<div class="animated fadeIn">
    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Danh sách cầu thủ</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>TT</th>
                                <th><i class="fa fa-user"></i> Cầu thủ</th>
                                <th><i class="fa fa-calendar-alt"></i> Ngày sinh</th>
                                <th><i class="fa fa-running"> Số trận ra sân</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=1; i < 5; i++) { %>
                            <tr>
                                <td><%=i%></td>

                                <td>Scott McTominay</td>
                                <td>01/01/1999</td>
                                <td>38</td>

                            </tr>
                            <% } %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>